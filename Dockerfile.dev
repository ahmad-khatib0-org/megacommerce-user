# Multi-stage build for Go service
# Stage 1: Builder
FROM golang:1.24-alpine AS builder

WORKDIR /app

# 1. Install build deps FIRST (cached unless changed)
RUN apk add --no-cache gcc musl-dev

# 2. Copy dependency files
COPY go.mod go.sum ./

# 3. Download dependencies (cached unless go.mod changes)
RUN go mod download

COPY . .

# 5. Build statically linked binary
RUN CGO_ENABLED=1 GOOS=linux go build -ldflags="-s -w" -o app .

# 6. Strip binary
RUN strip app

# Stage 2: Tiny runtime image
FROM alpine:latest
WORKDIR /app

# Install ONLY runtime dependencies
RUN apk add --no-cache ca-certificates postgresql-client curl

COPY --from=builder /app/app .
COPY config.dev.yaml ./

EXPOSE 50052

CMD ["./app"]
